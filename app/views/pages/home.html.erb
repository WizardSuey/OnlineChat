<h1>Turbochat</h1>

<% if current_user %>
    <%= link_to "Start Chatting", rooms_path, class: "btn btn-primary"  %>
    <%= image_tag current_user.avatar, class: 'avatar' %>
    <%= button_to "Logout", logout_path, method: :delete, class: 'btn btn-outline-secondary text' %>
    <%= link_to "Edit", edit_path, class: "btn btn-secondary" %>
<% else %>
    <%= link_to "Login", sign_in_path, class: 'nav-link text' %>
    <%= link_to "Sign Up", sign_up_path, class: 'nav-link text' %>
<% end %>